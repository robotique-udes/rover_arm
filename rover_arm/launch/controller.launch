<?xml version='1.0'?>
<launch>
    <arg name="local_only" default="false" />
    <include file="$(find rover_control)/launch/machine_config.launch">
        <arg name="local_only" value="$(arg local_only)" />
    </include>

    <group ns="arm">
        <!-- Master node -->
        <node machine="rover" name="arm_master" pkg="rover_arm" type="master" output="screen">
            <rosparam file="$(find rover_arm)/config/controller_logitech.yaml" />
            <rosparam file="$(find rover_arm)/config/speeds.yaml" />
        </node>

        <!--Lancer le service de calcul en cartÃ©sien-->
        <node machine="rover" name="arm_diff_kinetics_calc_server" pkg="rover_arm"
            type="diff_kinetics_calc_server.py" />
    </group>
</launch>
