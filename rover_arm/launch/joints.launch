<?xml version='1.0'?>
<launch>
    <!-- <machine name="rover" address="192.168.1.50" env-loader="$(env ROS_ROOT)/../../env.sh" user="rovus" password="rovus"/> -->
    <machine name="base" address="localhost" env-loader="$(env ROS_ROOT)/../../env.sh" default="true"/>

    <group ns="arm">
        <node name="watchdog" pkg="rover_arm" type="joint_watchdog" output="screen" />

        <group ns="j0">
            <node name="joint_node" pkg="rosserial_arduino" type="serial_node.py" output="screen">
                <param name="port" value="/dev/serial/by-id/usb-1a86_USB2.0-Ser_-if00-port0" />
            </node>
        </group>

        <group ns="j1">
            <node name="joint_node" pkg="rosserial_arduino" type="serial_node.py" output="screen">
                <param name="port" value="/dev/serial/by-id/usb-1a86_USB2.0-Serial-if00-port0" />
            </node>
        </group>

        <!-- <group ns="j2">
            <node name="joint_node" pkg="rosserial_arduino" type="serial_node.py" output="screen">
                <param name="port" value="/dev/serial/by-id/usb-1a86_USB2.0-Serial-if00-port0" />
            </node>
        </group> -->
    </group>

</launch>
